{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "types":[
        "mocha"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "typeRoots": [
         "src/@types"
      ]
   }
}
